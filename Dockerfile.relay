FROM node:22-alpine

# Install build tools for native bindings
RUN apk add --no-cache python3 make g++

WORKDIR /app

COPY package*.json package-lock.json ./
COPY tsconfig.json ./
RUN npm ci

# Build TypeScript
RUN npm run build

COPY src/ ./src/
COPY .sisyphus/ /.sisyphus/

ENV NODE_ENV=production
ENV TZ=Europe/Oslo

CMD ["node", "dist/index.js"]


{
  "name": "ine-discord-bot",
  "version": "1.0.0",
  "description": "AI Discord bot for group chat monitoring, calendar management, and task extraction",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:relay": "tsc -p tsconfig.relay.json",
    "start": "node dist/index.js",
    "start:gateway": "tsx src/gateway/run.ts",
    "start:relay": "tsx src/relay/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chrono-node": "^2.7.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "discord.js-selfbot-v13": "^3.7.1",
    "dotenv": "^16.4.1",
    "eris": "^0.17.2",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "rrule": "^2.7.0",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.6.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
